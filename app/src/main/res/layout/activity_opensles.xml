<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://sharefs.ali.kugou.com/202203081733/9cf167009399c608bd8d1217ae512211/KGTX/CLTX001/b5b0c0212b3ee27269e322f88f9c07d8.mp3" />

    <Button
        android:id="@+id/bn_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装载数据" />

    <Button
        android:id="@+id/bn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bn_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得状态" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />
    </LinearLayout>
</LinearLayout>