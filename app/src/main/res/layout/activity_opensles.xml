<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://sharefs.ali.kugou.com/202201191535/ea2a85d87a945fde52a029eafedc21c4/KGTX/CLTX001/f7698a5e6842739b231405114416e4d9.mp3" />

    <Button
        android:id="@+id/bn_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装载数据" />

    <Button
        android:id="@+id/bn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bn_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得状态" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />
    </LinearLayout>
</LinearLayout>